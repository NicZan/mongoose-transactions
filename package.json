{
  "name": "mongoose-transactions",
  "version": "1.1.3",
  "description": "Atomicity and Transactions for mongoose",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts' '__tests__/**/*.ts'",
    "pretest": "npm run lint",
    "test": "jest --forceExit --runInBand",
    "build": "tsc -w false"
  },
  "pre-commit": [
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daton89-topperblues/mongoose-transactions.git"
  },
  "keywords": [
    "mongoose",
    "transactions"
  ],
  "author": "Nicola Bonavita @topperblues, Antonio D'Angelo @daton89",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/daton89-topperblues/mongoose-transactions/issues"
  },
  "homepage": "https://github.com/daton89-topperblues/mongoose-transactions#readme",
  "peerDependencies": {
    "mongoose": ">=4.11.1"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.42",
    "@types/jest": "^20.0.2",
    "@types/node": "^8.0.11",
    "jest": "^25.1.0",
    "mongoose": "^5.9.2",
    "pre-commit": "^1.2.2",
    "ts-jest": "^25.2.1",
    "tslint": "^5.5.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$",
    "verbose": true,
    "notify": false,
    "bail": false
  }
}
